      </taskRunners>
    </taskManager>
  </xecMe.Core>
  <system.diagnostics>
    <trace autoflush="false" indentsize="4">
      <listeners>
        <add name="trace" type="System.Diagnostics.ConsoleTraceListener" />
      </listeners>
    </trace>
  </system.diagnostics>
